nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse(role="navigation")
  .container-fluid
    .navbar-header
      button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-movie-nav" aria-expanded="false")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/") MM电影
    .collapse.navbar-collapse#bs-movie-nav
      ul.nav.navbar-nav
        li.active
          a(href='#') 首页
        li
          a(href="#") 大片推荐
        li
          a(href="#") 新片推荐
      form.navbar-form.navbar-right(role="search" method="GET" action="/movie/result")
        .form-group
          input.form-control(type="text" name="q")
        button.btn.btn-default(type="submit") 搜索
      //- button.btn.btn-default.navbar-btn.navbar-right(type="button" data-toggle="modal" data-target="#signinModal") 登陆
      if user
        p.navbar-text.navbar-right 欢迎你, #{user.name}
          span &nbsp;|&nbsp;
          a.navbar-link(href="/logout") 退出 &nbsp;
      else
        p.navbar-text.navbar-right 已有账号? 
          a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登陆
          span &nbsp;|&nbsp;
          a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal") 注册 &nbsp;
#signupModal.modal.fade
  .modal-dialog(role="document")
    .modal-content
      form(method="POST", action="/user/signup")
        .modal-header 用户注册
        .modal-body
          .form-group
            label.control-label(for="signupName") 用户名
            input#signupName.form-control(name="user[name]" type="text" placeholder="不支持中文用户名")            
          .form-group
            label.control-label(for="signupEmail") 邮箱地址
            input#signupEmail.form-control(name="user[email]" type="text" placeholder="例如：123123@qq.com")
            //- span#helpBlock.help-block 请输入电子邮箱地址，例如：12332234@qq.com
          .form-group
            label.control-label(for="signupPassword") 设置密码
            input#signupPassword.form-control(name="user[password]" type="password" placeholder="密码")            
          .form-group
            label.control-label(for="signupPassword") 确认密码
            input#signupPassword.form-control(name="passwordAgain" type="password" placeholder="确认密码")
          .form-group
            label.control-label(for="signupPhoneNumber") 手机号码
            input#signupPhoneNumber.form-control(name="user[phoneNumber]" type="text" placeholder="例如：18590803232")
        .modal-footer
          button.btn.btn-default(type="button", data-dismiss="modal") 关闭
          button.btn.btn-success(type="submit") 提交
#signinModal.modal.fade
  .modal-dialog
    .modal-content
      form(method="POST", action="/user/signin")
        .modal-header 用户登陆
        .modal-body
          .form-group
            label(for="signinName") 用户名
            input#signinName.form-control(name="user[name]" type="text")
          .form-group
            label(for="signinPassword") 密码
            input#signinPassword.form-control(name="user[password]" type="password")
        .modal-footer
          button.btn.btn-default(type="button", data-dismiss="modal") 关闭
          button.btn.btn-success(type="submit") 提交
