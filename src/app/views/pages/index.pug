extends ../layout

block content
  .container
    .row
      each cat in categories
        .panel.panel-default
          .panel-heading
            a(href=cat._id)
              h3 #{cat.name}
          .panel-body
            if cat.movies && cat.movies.length > 0
              each item in cat.movies
                .row
                  .col-sm-6.col-md-4
                    .thumbnail
                      a(href="/movie/" + item._id)
                        img.img-responsive.img-thumbnail(src=item.poster alt=item.title width="200" height="243")
                      .caption
                        h3 #{item.title}
                        p: a.btn.btn-primary(href="/movie/" + item._id, role="button") 观看预告片