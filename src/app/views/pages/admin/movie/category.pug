extends ../../../layout

block content
  .container
    .row
      form.form-horizontal(method="post", action="/admin/category")
        if category._id
          input(type="hidden", name="category[_id]", value=category._id)
        .form-group
          label.col-sm-3.control-lable(for="inputCategory") 分类名字
          .col-sm-10
            input#inputCategory.form-control(type="text", name="category[name]", value=category.name)
        .form-group
          label.col-sm-3.control-lable(for="inputCategory") 分类描述
          .col-sm-10
            input#inputCategory.form-control(type="text", name="category[desc]", value=category.desc)
        .form-group
          .col-sm-offset-2.col-sm-10
          button.btn.btn-default(type="submit") 录入
